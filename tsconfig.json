{
  "compilerOptions": {
    "jsx": "react-jsx",  // Or "react" for older versions of React
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@/*": ["*"]
    },
    "moduleResolution": "node", // Ensure node module resolution is used
    "esModuleInterop": true     // This ensures proper interoperability between CommonJS and ES Modules
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
